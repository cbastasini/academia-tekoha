---
const navLinks = [
  { href: '/#modalidades', text: 'Modalidades' },
  { href: '/#beneficios', text: 'Benefícios' },
  { href: '/#filosofia', text: 'Filosofia' },
  { href: 'https://www.instagram.com/stories/highlights/18054715670483328/', text: 'Professores', target: '_blank' },
  { href: '/#depoimentos', text: 'Depoimentos' },
  { href: '/blog', text: 'Blog' },
  { href: 'https://www.instagram.com/stories/highlights/18074222341504145/', text: 'Horários', target: '_blank' },
  { href: '/#localizacao', text: 'Localização' },
];
---

<header>
    <nav>
        <a href="/" class="logo">
            <img src="/images/tekoha-logo.png" alt="Academia Tekoha" class="logo-image" />
        </a>
        <ul class="nav-links">
            {navLinks.map(link => (
                <li>
                    <a href={link.href} target={link.target || '_self'} rel={link.target === '_blank' ? 'noopener noreferrer' : undefined}>
                        {link.text}
                    </a>
                </li>
            ))}
        </ul>
        <a href="https://venda.nextfit.com.br/16bbadfc-45e5-4ad0-8a25-4248d41c8b3e/contratos" class="cta-button" target="_blank" rel="noopener">
            Planos e Preços
        </a>
        <button class="mobile-menu-btn" aria-label="Menu">☰</button>
    </nav>
</header>

<style>
    header {
        position: fixed;
        top: 0;
        width: 100%;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        z-index: 1000;
        border-bottom: 1px solid var(--color-border);
        animation: slideDown 0.5s ease;
    }

    @keyframes slideDown {
        from {
            transform: translateY(-100%);
            opacity: 0;
        }
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    nav {
        max-width: 1400px;
        margin: 0 auto;
        padding: var(--spacing-sm) var(--spacing-md);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .logo {
        display: flex;
        align-items: center;
    }

    .logo-image {
        height: 55px;
        width: auto;
        object-fit: contain;
        transition: transform 0.3s ease;
    }

    .logo-image:hover {
        transform: scale(1.05);
    }

    .nav-links {
        display: flex;
        gap: var(--spacing-md);
        list-style: none;
    }

    .nav-links a {
        color: var(--color-text);
        font-size: 0.9rem;
        font-weight: 400;
        transition: color 0.3s ease;
        position: relative;
    }

    .nav-links a::after {
        content: '';
        position: absolute;
        bottom: -4px;
        left: 0;
        width: 0;
        height: 2px;
        background: var(--color-text);
        transition: width 0.3s ease;
    }

    .nav-links a:hover {
        color: var(--color-accent-dark);
    }

    .nav-links a:hover::after {
        width: 100%;
    }

    .cta-button {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: white;
        padding: 0.9rem 1.8rem;
        font-weight: 600;
        font-size: 0.95rem;
        border-radius: 6px;
        border: none;
        transition: all 0.3s ease;
        cursor: pointer;
        box-shadow: 0 4px 14px rgba(16, 185, 129, 0.3);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .cta-button:hover {
        background: linear-gradient(135deg, #059669 0%, #047857 100%);
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(16, 185, 129, 0.45);
    }

    .mobile-menu-btn {
        display: none;
        background: none;
        border: none;
        font-size: 1.5rem;
        cursor: pointer;
        color: var(--color-text);
    }

    @media (max-width: 968px) {
        .nav-links {
            display: none;
        }

        .mobile-menu-btn {
            display: block;
        }

        .logo-image {
            height: 45px;
        }
    }
</style>

<script>
    const header = document.querySelector('header');
    window.addEventListener('scroll', () => {
        if (window.scrollY > 100) {
            header!.style.background = 'rgba(255, 255, 255, 0.98)';
            header!.style.boxShadow = '0 2px 10px rgba(0,0,0,0.08)';
        } else {
            header!.style.background = 'rgba(255, 255, 255, 0.95)';
            header!.style.boxShadow = 'none';
        }
    });
</script>
